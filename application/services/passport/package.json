  "scripts": {
    "===dev===": "===",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "===prod===": "===",
    "build": "nest build",
    "start:prod": "node dist/main",
    "===test===": "===",
    "lint": "eslint \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "test": "node --test --loader tsx ./src/**/*/authentication.controller.spec.ts",
    "test:watch": "node --test --watch --loader tsx ./src/**/**/*.spec.ts",
    "test:debug": "node --test --watch --inspect-brk --loader tsx ./src/**/**/*.spec.ts",
    "test:e2e": "node --test --loader tsx ./src/**/**/*.e2e-spec.ts",
    "test:e2e:watch": "node --test --watch --loader tsx ./src/**/**/*.e2e-spec.ts",
    "test:e2e:debug": "node --test --inspect-brk --watch --loader tsx ./src/**/**/*.e2e-spec.ts",
    "===utils===": "===",
    "format": "pnpm lint --fix"
  },
  "dependencies": {
    "@nestjs/common": "^10.2.4",
    "@nestjs/core": "^10.2.4",
    "@nestjs/platform-fastify": "^10.2.4",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@looport/eslint-config": "workspace:*",
    "@nestjs/cli": "^10.1.17",
    "@nestjs/testing": "^10.2.4",
    "@types/node": "20.5.1",
    "@types/supertest": "^2.0.12",
    "eslint": "^8.42.0",
    "prettier": "^2.8.8",
    "supertest": "^6.3.3",
    "tsx": "^3.12.8",
    "typescript": "^5.1.3"
  },
  "eslintConfig": {
    "extends": [
      "@looport/eslint-config/src/base"
    ],
    "env": {
      "node": true
    }
  },
  "prettier": "@looport/eslint-config/src/.prettierrc.js"
